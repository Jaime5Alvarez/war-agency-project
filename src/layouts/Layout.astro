---
import "../styles/global.css";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- PWA and Mobile Optimization -->
		<meta name="mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
		<meta name="theme-color" content="#030304" />
		<meta name="msapplication-navbutton-color" content="#030304" />
		<meta name="apple-mobile-web-app-title" content="Live Combat" />
		
		<!-- Preload critical resources -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		
		<!-- SEO Meta Tags -->
		<title>{title}</title>
		<meta name="description" content="Experiencias militares reales en Polonia. Helicópteros, tanques, armamento auténtico y misiones personalizadas. Vive el combate real con instructores profesionales." />
		<meta name="keywords" content="experiencia militar, combate real, entrenamiento militar, armamento real, Polonia, turismo militar, aventura extrema" />
		<meta name="author" content="Live Combat Experience" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content="Vive experiencias militares reales con armamento auténtico, helicópteros y tanques en instalaciones militares de Polonia." />
		<meta property="og:site_name" content="Live Combat Experience" />
		<meta property="og:locale" content="es_ES" />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content="Experiencias militares auténticas en Polonia con instructores profesionales." />
		
		<!-- Additional meta tags -->
		<meta name="robots" content="index, follow" />
		<meta name="googlebot" content="index, follow" />
		<meta name="format-detection" content="telephone=no" />
		
		<!-- Performance hints -->
		<meta http-equiv="x-dns-prefetch-control" content="on" />
		<link rel="dns-prefetch" href="//fonts.googleapis.com" />
		<link rel="dns-prefetch" href="//fonts.gstatic.com" />
	</head>
	<body class="bg-war-primary text-war-light antialiased">
		<slot />
			</body>
</html>

<style>
	/* Reset and base responsive styles */
	html,
	body {
		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
		overflow-x: hidden;
	}
	
	* {
		box-sizing: border-box;
	}
	
	/* Smooth scroll with better performance */
	html {
		scroll-behavior: smooth;
		scroll-padding-top: 4rem; /* Account for sticky navbar */
	}
	
	/* Support for safe area insets (iPhone X+ notch) */
	body {
		padding-left: env(safe-area-inset-left);
		padding-right: env(safe-area-inset-right);
	}
	
	/* Improved scrollbar for different screen sizes */
	::-webkit-scrollbar {
		width: 6px;
	}
	
	@media (min-width: 1024px) {
		::-webkit-scrollbar {
			width: 8px;
		}
	}
	
	::-webkit-scrollbar-track {
		background: var(--color-war-primary);
	}
	
	::-webkit-scrollbar-thumb {
		background: var(--color-war-medium);
		border-radius: 4px;
	}
	
	::-webkit-scrollbar-thumb:hover {
		background: var(--color-war-light);
	}
	
	/* Performance optimizations */
	img, video {
		max-width: 100%;
		height: auto;
	}
	
	/* Reduce motion for users who prefer it */
	@media (prefers-reduced-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
		
		*,
		*::before,
		*::after {
			animation-duration: 0.01ms !important;
			animation-iteration-count: 1 !important;
			transition-duration: 0.01ms !important;
		}
	}
	
	/* Dark mode support */
	@media (prefers-color-scheme: dark) {
		:root {
			color-scheme: dark;
		}
	}
	
	/* Focus management for better accessibility */
	*:focus {
		outline: 2px solid var(--color-war-light);
		outline-offset: 2px;
	}
	
	/* High contrast mode support */
	@media (prefers-contrast: high) {
		:root {
			--color-war-light: #ffffff;
			--color-war-medium: #999999;
			--color-war-primary: #000000;
		}
	}
	
	/* Touch device optimizations */
	@media (hover: none) and (pointer: coarse) {
		/* Increase touch targets */
		button, a {
			min-height: 44px;
			min-width: 44px;
		}
		
		/* Remove hover states that don't work on touch */
		.hover\:scale-105:hover {
			transform: none;
		}
	}
	
	/* Print styles */
	@media print {
		* {
			background: white !important;
			color: black !important;
			box-shadow: none !important;
		}
		
		nav, .no-print {
			display: none !important;
		}
		
		body {
			font-size: 12pt;
			line-height: 1.4;
		}
	}
</style>
