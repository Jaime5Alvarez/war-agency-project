<script>
  document.addEventListener('DOMContentLoaded', function() {
    const faqItems = document.querySelectorAll('.faq-item');
    
    faqItems.forEach((item, index) => {
      const trigger = item.querySelector('.faq-trigger') as HTMLElement;
      const content = item.querySelector('.faq-content') as HTMLElement;
      const icon = trigger?.querySelector('.faq-icon') as HTMLElement;
      
      if (!trigger || !content || !icon) return;
      
      trigger.addEventListener('click', function() {
        const isOpen = item.classList.contains('faq-active');
        
        // Cerrar todos los otros FAQ
        faqItems.forEach(otherItem => {
          if (otherItem !== item) {
            otherItem.classList.remove('faq-active');
            const otherContent = otherItem.querySelector('.faq-content');
            const otherIcon = otherItem.querySelector('.faq-icon');
            
            if (otherContent && otherIcon) {
              otherContent.classList.add('max-h-0', 'opacity-0');
              otherContent.classList.remove('max-h-96', 'opacity-100');
              otherIcon.classList.remove('rotate-45');
              otherIcon.classList.add('rotate-0');
            }
          }
        });
        
        // Toggle el item actual
        if (isOpen) {
          // Cerrar
          item.classList.remove('faq-active');
          content.classList.add('max-h-0', 'opacity-0');
          content.classList.remove('max-h-96', 'opacity-100');
          icon.classList.remove('rotate-45');
          icon.classList.add('rotate-0');
        } else {
          // Abrir
          item.classList.add('faq-active');
          content.classList.remove('max-h-0', 'opacity-0');
          content.classList.add('max-h-96', 'opacity-100');
          icon.classList.remove('rotate-0');
          icon.classList.add('rotate-45');
        }
      });
    });
  });
</script>



