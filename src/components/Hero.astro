<script>
  // Actualizar reloj militar
  function updateMilitaryTime() {
    const now = new Date();
    const militaryTime = now.toLocaleTimeString('en-US', { 
      hour12: false, 
      hour: '2-digit', 
      minute: '2-digit', 
      second: '2-digit' 
    });
    const timeElement = document.getElementById('military-time');
    if (timeElement) {
      timeElement.textContent = militaryTime;
    }
  }
  
  // Solo ejecutar si el elemento existe (desktop)
  if (document.getElementById('military-time')) {
    updateMilitaryTime();
    setInterval(updateMilitaryTime, 1000);
  }
</script>

<style>
  /* Animaciones personalizadas */
  
  /* Efecto de escaneo con color gris dominante - responsivo */
  section::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-war-light), transparent);
    animation: scan 3s linear infinite;
    z-index: 20;
  }

  
  @keyframes scan {
    0% { left: -100%; }
    100% { left: 100%; }
  }

  /* Efecto de part칤culas sutiles con grises - M치s sutil en m칩viles */
  section::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      radial-gradient(circle at 20% 80%, rgb(from var(--color-war-light) r g b / 0.03) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, rgb(from var(--color-war-medium) r g b / 0.03) 0%, transparent 50%);
    pointer-events: none;
    z-index: 5;
  }

  @media (min-width: 640px) {
    section::after {
      background-image: 
        radial-gradient(circle at 20% 80%, rgb(from var(--color-war-light) r g b / 0.05) 0%, transparent 50%),
        radial-gradient(circle at 80% 20%, rgb(from var(--color-war-medium) r g b / 0.05) 0%, transparent 50%),
        radial-gradient(circle at 40% 40%, rgb(from var(--color-war-white) r g b / 0.03) 0%, transparent 50%);
    }
  }

  /* Efecto de brillo sutil en elementos blancos */
  @keyframes subtle-glow {
    0%, 100% { text-shadow: 0 0 3px rgb(from var(--color-war-light) r g b / 0.3); }
    50% { text-shadow: 0 0 8px rgb(from var(--color-war-white) r g b / 0.4); }
  }

  @media (min-width: 640px) {
    @keyframes subtle-glow {
      0%, 100% { text-shadow: 0 0 5px rgb(from var(--color-war-light) r g b / 0.3); }
      50% { text-shadow: 0 0 15px rgb(from var(--color-war-white) r g b / 0.4); }
    }
  }
  
  h1 span:first-child {
    animation: subtle-glow 3s ease-in-out infinite;
  }

  /* Asegurar que el video sea responsive */
  video {
    object-position: center;
  }

  @media (max-width: 640px) {
    video {
      object-position: center 30%;
    }
  }
</style>
  