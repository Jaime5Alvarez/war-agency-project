<script>
  // Actualizar reloj militar
  function updateMilitaryTime() {
    const now = new Date();
    const militaryTime = now.toLocaleTimeString('en-US', { 
      hour12: false, 
      hour: '2-digit', 
      minute: '2-digit', 
      second: '2-digit' 
    });
    const timeElement = document.getElementById('military-time');
    if (timeElement) {
      timeElement.textContent = militaryTime;
    }
  }
  
  updateMilitaryTime();
  setInterval(updateMilitaryTime, 1000);
</script>

