<section class="relative h-screen w-full overflow-hidden">
  <!-- Video de fondo -->
  <div class="absolute inset-0 z-0">
    <video 
      src="/videos/c0d18810-c140-4d32-82e6-4ce0a1f42444.MP4" 
      autoplay 
      loop 
      muted 
      playsinline
      class="w-full h-full object-cover"
    ></video>
    <!-- Overlay oscuro agresivo -->
    <div class="absolute inset-0 bg-gradient-to-br from-black/80 via-slate-900/70 to-black/90"></div>
    <!-- Patrón de textura militar -->
    <div class="absolute inset-0 opacity-20 bg-gradient-to-r from-transparent via-green-900/20 to-transparent"></div>
  </div>

  <!-- Contenido principal -->
  <div class="relative z-10 flex items-center justify-center h-full px-6 lg:px-8">
    <div class="text-center max-w-5xl mx-auto">
      
      <!-- Badge superior -->
      <div class="inline-flex items-center px-4 py-2 mb-8 text-xs font-semibold tracking-wider text-green-400 uppercase bg-black/60 border border-green-500/30 rounded-full backdrop-blur-sm">
        <span class="w-2 h-2 bg-green-400 rounded-full mr-2 animate-pulse"></span>
        Elite Operations
      </div>

      <!-- Título principal -->
      <h1 class="text-5xl md:text-7xl lg:text-8xl font-black text-white mb-6 tracking-tight">
        <span class="block bg-gradient-to-r from-white via-gray-200 to-green-400 bg-clip-text text-transparent">
          WAR
        </span>
        <span class="block text-green-400 -mt-4">
          AGENCY
        </span>
      </h1>

      <!-- Subtítulo -->
      <p class="text-xl md:text-2xl text-gray-300 mb-12 max-w-3xl mx-auto leading-relaxed font-light">
        Operaciones tácticas de élite. Misiones clasificadas. 
        <span class="text-green-400 font-semibold">Resultados garantizados.</span>
      </p>

      <!-- Botones de acción -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <button class="group relative px-8 py-4 bg-gradient-to-r from-green-600 to-green-500 text-white font-bold text-lg uppercase tracking-wider rounded-none border-2 border-green-500 hover:bg-transparent hover:text-green-400 transition-all duration-300 transform hover:scale-105">
          <span class="relative z-10">Iniciar Misión</span>
          <div class="absolute inset-0 bg-gradient-to-r from-green-800 to-green-700 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        </button>
        
        <button class="px-8 py-4 bg-transparent text-white font-bold text-lg uppercase tracking-wider border-2 border-white hover:bg-white hover:text-black transition-all duration-300 transform hover:scale-105">
          Ver Intel
        </button>
      </div>

      <!-- Indicadores de estado -->
      <div class="flex justify-center items-center mt-16 space-x-8 text-sm">
        <div class="flex items-center text-green-400">
          <div class="w-3 h-3 bg-green-400 rounded-full mr-2 animate-pulse"></div>
          <span class="uppercase tracking-wider">Sistema Activo</span>
        </div>
        <div class="flex items-center text-red-400">
          <div class="w-3 h-3 bg-red-400 rounded-full mr-2"></div>
          <span class="uppercase tracking-wider">Área Restringida</span>
        </div>
        <div class="flex items-center text-yellow-400">
          <div class="w-3 h-3 bg-yellow-400 rounded-full mr-2 animate-pulse"></div>
          <span class="uppercase tracking-wider">Nivel Alpha</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Elementos decorativos -->
  <div class="absolute top-10 left-10 text-green-400 opacity-60">
    <div class="text-xs font-mono uppercase tracking-widest">
      <div>Lat: 40.7128°N</div>
      <div>Lng: 74.0060°W</div>
      <div class="mt-2">Status: <span class="text-green-400">OPERATIONAL</span></div>
    </div>
  </div>

  <div class="absolute top-10 right-10 text-green-400 opacity-60">
    <div class="text-xs font-mono uppercase tracking-widest text-right">
      <div>Security Level: <span class="text-red-400">CLASSIFIED</span></div>
      <div>Access Code: <span class="text-yellow-400">ALPHA-7</span></div>
      <div class="mt-2">Time: <span id="military-time" class="text-green-400"></span></div>
    </div>
  </div>

  <!-- Líneas decorativas -->
  <div class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-green-500 to-transparent"></div>
  <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-green-500 to-transparent"></div>
</section>

<script>
  // Actualizar reloj militar
  function updateMilitaryTime() {
    const now = new Date();
    const militaryTime = now.toLocaleTimeString('en-US', { 
      hour12: false, 
      hour: '2-digit', 
      minute: '2-digit', 
      second: '2-digit' 
    });
    const timeElement = document.getElementById('military-time');
    if (timeElement) {
      timeElement.textContent = militaryTime;
    }
  }
  
  updateMilitaryTime();
  setInterval(updateMilitaryTime, 1000);
</script>

<style>
  /* Animaciones personalizadas */
  @keyframes glitch {
    0%, 100% { transform: translateX(0); }
    20% { transform: translateX(-2px) skew(-1deg); }
    40% { transform: translateX(2px) skew(1deg); }
    60% { transform: translateX(-1px) skew(-0.5deg); }
    80% { transform: translateX(1px) skew(0.5deg); }
  }
  
  h1:hover {
    animation: glitch 0.5s ease-in-out;
  }
  
  /* Efecto de escaneo */
  section::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, transparent, #10b981, transparent);
    animation: scan 3s linear infinite;
    z-index: 20;
  }
  
  @keyframes scan {
    0% { left: -100%; }
    100% { left: 100%; }
  }
</style>
  