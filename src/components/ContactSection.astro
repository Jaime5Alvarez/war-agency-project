<script>
  // Funcionalidad del formulario
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form') as HTMLFormElement;
    const inputs = form.querySelectorAll('input, textarea, select') as NodeListOf<HTMLElement>;
    
    // Efecto focus en inputs
    inputs.forEach(input => {
      input.addEventListener('focus', function(this: HTMLElement) {
        this.style.borderColor = '#B0AAA6';
        this.style.boxShadow = '0 0 0 2px rgba(176, 170, 166, 0.2)';
      });
      
      input.addEventListener('blur', function(this: HTMLElement) {
        this.style.borderColor = '#605E5D';
        this.style.boxShadow = 'none';
      });
    });
    
    // Envío del formulario
    form.addEventListener('submit', function(e) {
      e.preventDefault();
      // Aquí iría la lógica de envío
      alert('¡Formulario enviado! Te contactaremos en 24h.');
    });
  });
</script>

